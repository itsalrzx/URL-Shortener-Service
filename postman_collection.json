{
  "info": {
    "name": "URL Shortener API",
    "description": "A comprehensive collection for testing the URL Shortener service built with Fastify and MongoDB. This collection includes all API endpoints with example requests, environment variables, and automated tests.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "Base URL for the URL Shortener API"
    },
    {
      "key": "shortId",
      "value": "",
      "description": "Generated short ID from create request (auto-populated)"
    }
  ],
  "item": [
    {
      "name": "Create Short URL",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Test response status",
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "// Test response structure",
              "pm.test('Response has required fields', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson).to.have.property('shortId');",
              "    pm.expect(responseJson).to.have.property('shortUrl');",
              "    pm.expect(responseJson).to.have.property('originalUrl');",
              "});",
              "",
              "// Test response data types",
              "pm.test('Response fields have correct types', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.shortId).to.be.a('string');",
              "    pm.expect(responseJson.shortUrl).to.be.a('string');",
              "    pm.expect(responseJson.originalUrl).to.be.a('string');",
              "});",
              "",
              "// Test shortId format (should be 8 characters)",
              "pm.test('Short ID has correct format', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.shortId).to.have.lengthOf(8);",
              "    pm.expect(responseJson.shortId).to.match(/^[A-Za-z0-9_-]+$/);",
              "});",
              "",
              "// Test shortUrl format",
              "pm.test('Short URL has correct format', function () {",
              "    const responseJson = pm.response.json();",
              "    const expectedUrl = pm.collectionVariables.get('baseUrl') + '/' + responseJson.shortId;",
              "    pm.expect(responseJson.shortUrl).to.equal(expectedUrl);",
              "});",
              "",
              "// Store shortId for subsequent requests",
              "if (pm.response.code === 201) {",
              "    const responseJson = pm.response.json();",
              "    pm.collectionVariables.set('shortId', responseJson.shortId);",
              "    console.log('Stored shortId:', responseJson.shortId);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"originalUrl\": \"https://www.example.com/very/long/url/path/that/needs/to/be/shortened\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/shorten",
          "host": ["{{baseUrl}}"],
          "path": ["shorten"]
        },
        "description": "Creates a shortened URL from a long URL. The response includes the generated short ID, the complete short URL, and the original URL."
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"originalUrl\": \"https://www.example.com/very/long/url/path/that/needs/to/be/shortened\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/shorten",
              "host": ["{{baseUrl}}"],
              "path": ["shorten"]
            }
          },
          "status": "Created",
          "code": 201,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json; charset=utf-8"
            }
          ],
          "body": "{\n  \"shortId\": \"abc12345\",\n  \"shortUrl\": \"http://localhost:3000/abc12345\",\n  \"originalUrl\": \"https://www.example.com/very/long/url/path/that/needs/to/be/shortened\"\n}"
        }
      ]
    },
    {
      "name": "Redirect to Original URL",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Check if shortId is available",
              "const shortId = pm.collectionVariables.get('shortId');",
              "if (!shortId) {",
              "    console.log('Warning: No shortId found. Please run \"Create Short URL\" request first.');",
              "}"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Test redirect response",
              "pm.test('Status code is 302 (redirect)', function () {",
              "    pm.response.to.have.status(302);",
              "});",
              "",
              "// Test Location header exists",
              "pm.test('Location header is present', function () {",
              "    pm.expect(pm.response.headers.get('Location')).to.exist;",
              "});",
              "",
              "// Test Location header contains original URL",
              "pm.test('Location header contains valid URL', function () {",
              "    const location = pm.response.headers.get('Location');",
              "    pm.expect(location).to.match(/^https?:\\/\\/.+/);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/{{shortId}}",
          "host": ["{{baseUrl}}"],
          "path": ["{{shortId}}"]
        },
        "description": "Redirects to the original URL using the short ID. This endpoint increments the click count and returns a 302 redirect response."
      },
      "response": [
        {
          "name": "Redirect Response",
          "originalRequest": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/abc12345",
              "host": ["{{baseUrl}}"],
              "path": ["abc12345"]
            }
          },
          "status": "Found",
          "code": 302,
          "_postman_previewlanguage": "plain",
          "header": [
            {
              "key": "Location",
              "value": "https://www.example.com/very/long/url/path/that/needs/to/be/shortened"
            }
          ],
          "body": ""
        }
      ]
    },
    {
      "name": "Get URL Analytics",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Check if shortId is available",
              "const shortId = pm.collectionVariables.get('shortId');",
              "if (!shortId) {",
              "    console.log('Warning: No shortId found. Please run \"Create Short URL\" request first.');",
              "}"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Test response status",
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Test response structure",
              "pm.test('Response has required analytics fields', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson).to.have.property('shortId');",
              "    pm.expect(responseJson).to.have.property('originalUrl');",
              "    pm.expect(responseJson).to.have.property('clickCount');",
              "    pm.expect(responseJson).to.have.property('createdAt');",
              "});",
              "",
              "// Test response data types",
              "pm.test('Analytics fields have correct types', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.shortId).to.be.a('string');",
              "    pm.expect(responseJson.originalUrl).to.be.a('string');",
              "    pm.expect(responseJson.clickCount).to.be.a('number');",
              "    pm.expect(responseJson.createdAt).to.be.a('string');",
              "});",
              "",
              "// Test click count is non-negative",
              "pm.test('Click count is non-negative number', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.clickCount).to.be.at.least(0);",
              "});",
              "",
              "// Test createdAt is valid ISO date",
              "pm.test('CreatedAt is valid ISO date', function () {",
              "    const responseJson = pm.response.json();",
              "    const date = new Date(responseJson.createdAt);",
              "    pm.expect(date.toISOString()).to.equal(responseJson.createdAt);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/analytics/{{shortId}}",
          "host": ["{{baseUrl}}"],
          "path": ["analytics", "{{shortId}}"]
        },
        "description": "Retrieves analytics data for a shortened URL including click count and creation timestamp."
      },
      "response": [
        {
          "name": "Analytics Response",
          "originalRequest": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/analytics/abc12345",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "abc12345"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
