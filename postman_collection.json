            }
          ],
          "body": "{\n  \"shortId\": \"abc12345\",\n  \"originalUrl\": \"https://www.example.com/very/long/url/path/that/needs/to/be/shortened\",\n  \"clickCount\": 5,\n  \"createdAt\": \"2025-12-09T10:30:00.000Z\"\n}"
        }
      ]
    },
